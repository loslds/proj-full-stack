
{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["dom", "es2020", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".", // Adicionado para facilitar importações relativas
    "paths": {
      "@/*": ["src/*"], // Alias explícito
      "*": ["node_modules/*", "src/*"] // Configuração para usar aliases nos imports
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
 