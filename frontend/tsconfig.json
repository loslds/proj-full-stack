{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "lib": ["dom", "es2020", "dom.iterable"],
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true, // Adicione esta linha
    "esModuleInterop": true // Garanta que isso também está configurado
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
